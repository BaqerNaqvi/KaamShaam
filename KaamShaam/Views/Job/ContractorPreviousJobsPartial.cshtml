            var iApplied = "";
            var isAppliedClass = "";

            if (!item.UserStatus)
            {
                cusStyle = cusStyle + " background-color: #ffeb99;";
            }
            if (item.IfIApplied)
            {
                iApplied = "[Applied]";
                isAppliedClass = "appplySpan";
            }

            var showStartedText = false;
            var jhistory = item.JobHistory.FirstOrDefault();
            if (jhistory != null)
